<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/playmusic_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.Music.ActivityPlayMusic">

    <!-- ===== Thanh tiêu đề ===== -->
    <LinearLayout
        android:id="@+id/playmusic_header"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/playmusic_btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_arrow_left"
            android:background="@android:color/transparent"
            android:scaleType="centerInside" />

        <TextView
            android:id="@+id/playmusic_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đang phát nhạc"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginStart="10dp" />
    </LinearLayout>

    <!-- ===== Khung chứa ảnh bài hát hoặc lời bài hát ===== -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:orientation="vertical">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/playmusic_bottomnav_effects"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            app:menu="@menu/menu_bottom_navigation_playmusic"
            android:background="@color/white_transparent"
            app:itemTextColor="@color/black"
            app:itemIconTint="@color/black"/>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/playmusic_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <!-- ===== Thông tin bài hát ===== -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingVertical="8dp">

        <TextView
            android:id="@+id/playmusic_tv_songname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên bài hát"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/playmusic_tv_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ca sĩ thể hiện"
            android:textSize="14sp"
            android:textColor="@color/gray"/>
    </LinearLayout>

    <!-- ===== Thanh SeekBar ===== -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="12dp">

        <TextView
            android:id="@+id/playmusic_tv_currenttime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textColor="@color/black"/>

        <SeekBar
            android:id="@+id/playmusic_seekbar_progress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginHorizontal="8dp"/>

        <TextView
            android:id="@+id/playmusic_tv_totaltime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="03:45"
            android:textColor="@color/black"/>
    </LinearLayout>

    <!-- ===== Nút điều khiển nhạc ===== -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageButton
            android:id="@+id/playmusic_btn_previous"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/ic_skip_previous"
            android:background="@android:color/transparent"
            android:scaleType="centerCrop"
            android:layout_marginHorizontal="15dp"/>

        <ImageButton
            android:id="@+id/playmusic_btn_playpause"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_play_arrow"
            android:background="@android:color/transparent"
            android:scaleType="centerCrop"
            android:layout_marginHorizontal="20dp"/>

        <ImageButton
            android:id="@+id/playmusic_btn_next"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/ic_skip_next"
            android:background="@android:color/transparent"
            android:scaleType="centerCrop"
            android:layout_marginHorizontal="15dp"/>
    </LinearLayout>

</LinearLayout>
