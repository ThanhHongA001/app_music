<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_accout_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:background="#FAFAFA"
    tools:context=".Activity.ActivityAccoutInfo">

    <!-- ===== Thanh tiêu đề ===== -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/acc_info_toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@android:color/white"
        android:elevation="4dp">

        <ImageView
            android:id="@+id/acc_info_btn_back"
            android:layout_width="38dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:src="@drawable/ic_arrow_left"
            android:contentDescription="Quay lại"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/acc_info_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="Thông tin tài khoản"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- ===== Nội dung cuộn được ===== -->
    <ScrollView
        android:id="@+id/acc_info_scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:padding="16dp">

        <LinearLayout
            android:id="@+id/acc_info_content_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Avatar -->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/acc_info_img_avatar"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@drawable/bg_album_rounded"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/acc_info_txt_change_avatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thay đổi ảnh đại diện"
                android:textColor="#3F51B5"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginBottom="16dp" />

            <!-- Tên hiển thị lớn -->
            <TextView
                android:id="@+id/acc_info_txt_display_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên người dùng"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/acc_info_txt_email_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="email@example.com"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginBottom="24dp" />

            <!-- Khối thông tin chi tiết -->
            <!-- Họ và tên -->
            <LinearLayout
                android:id="@+id/acc_info_row_fullname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:drawable/edit_text"
                android:padding="10dp"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Họ và tên"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/acc_info_txt_fullname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Người dùng A"
                    android:textSize="16sp"
                    android:textColor="@android:color/black" />
            </LinearLayout>

            <!-- Email -->
            <LinearLayout
                android:id="@+id/acc_info_row_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:drawable/edit_text"
                android:padding="10dp"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/acc_info_txt_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="email@example.com"
                    android:textSize="16sp"
                    android:textColor="@android:color/black" />
            </LinearLayout>

            <!-- Số điện thoại (nếu có) -->
            <LinearLayout
                android:id="@+id/acc_info_row_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:drawable/edit_text"
                android:padding="10dp"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số điện thoại"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/acc_info_txt_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Chưa cập nhật"
                    android:textSize="16sp"
                    android:textColor="@android:color/black" />
            </LinearLayout>

            <!-- Ngày tạo tài khoản -->
            <LinearLayout
                android:id="@+id/acc_info_row_created_at"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:drawable/edit_text"
                android:padding="10dp"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ngày tạo tài khoản"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/acc_info_txt_created_at"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="--/--/----"
                    android:textSize="16sp"
                    android:textColor="@android:color/black" />
            </LinearLayout>

            <!-- Nhóm nút thao tác -->
            <Button
                android:id="@+id/acc_info_btn_edit"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Chỉnh sửa thông tin"
                android:backgroundTint="#3F51B5"
                android:textColor="#FFF"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/acc_info_btn_change_password"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Đổi mật khẩu"
                android:backgroundTint="#009688"
                android:textColor="#FFF"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/acc_info_btn_logout"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Đăng xuất"
                android:backgroundTint="#F44336"
                android:textColor="#FFF"
                android:textStyle="bold"
                android:layout_marginBottom="24dp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
