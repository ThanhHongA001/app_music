<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_home_list_music_v3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context=".Fragment.FragmentHomeListMusic_V3">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/home_listmusic_v3_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/home_listmusic_v3_tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="List Album"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/home_listmusic_v3_btn_more"
            android:layout_width="42dp"
            android:layout_height="32dp"
            android:background="@color/white_transparent"
            android:gravity="center"
            android:text=" >>>"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/home_listmusic_v3_tv_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/home_listmusic_v3_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:clipToPadding="false"
            android:padding="8dp"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/home_listmusic_v3_tv_title"
            tools:listitem="@layout/item_home_list_music_v3" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
