<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_home_list_music_v3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".Fragment.FragmentHomeListMusic_V3">

    <LinearLayout
        android:id="@+id/home_listmusic_v3_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/home_listmusic_v3_tv_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tên Thể Loại"
                android:textSize="20sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/home_listmusic_v3_btn_more"
                android:layout_width="80dp"
                android:layout_height="32dp"
                android:text=">>>"
                android:textSize="15sp"
                android:textStyle="bold"
                android:background="@color/white_transparent"
                android:paddingHorizontal="8dp" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/home_listmusic_v3_progressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/home_listmusic_v3_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="255dp"
            android:clipToPadding="false"
            tools:listitem="@layout/item_home_list_music_v3" />
    </LinearLayout>
</FrameLayout>
