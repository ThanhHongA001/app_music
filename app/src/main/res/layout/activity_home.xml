<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityHome">

    <!--  Thanh trên cùng  -->
    <LinearLayout
        android:id="@+id/home_layout_topbar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:gravity="center_vertical|end"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/white"
        android:elevation="4dp">

        <!-- Nút đăng nhập -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/home_btn_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng nhập"
            android:backgroundTint="@color/purple_500"
            android:textColor="@android:color/white"/>

        <!-- Thông tin người dùng (ẩn khi chưa đăng nhập) -->
        <LinearLayout
            android:id="@+id/home_layout_user_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:layout_marginStart="8dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/home_img_avatar"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_launcher_background"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/home_tv_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên người dùng"
                android:textSize="16sp"
                android:textColor="@color/black"/>
        </LinearLayout>
    </LinearLayout>

    <!-- ViewPager hiển thị các fragment  -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/home_view_pager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/home_layout_topbar"
        app:layout_constraintBottom_toTopOf="@id/home_layout_player_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!--  Thanh phát nhạc mini (ẩn khi không có bài hát đang phát) -->
    <LinearLayout
        android:id="@+id/home_layout_player_bar"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:elevation="8dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/home_bottom_nav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Ảnh bài hát -->
        <ImageView
            android:id="@+id/home_img_song_thumb"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background"
            android:layout_marginEnd="8dp"/>

        <!-- Tên và ca sĩ -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/home_tv_song_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên bài hát"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/home_tv_song_artist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên ca sĩ"
                android:textColor="@color/gray"
                android:textSize="13sp"
                android:maxLines="1"
                android:ellipsize="end"/>
        </LinearLayout>

        <!-- Nút điều khiển -->
        <ImageButton
            android:id="@+id/home_btn_play_pause"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_play_arrow"
            android:contentDescription="Phát / Tạm dừng"/>
    </LinearLayout>

    <!--  Bottom Navigation  -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/home_bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:itemIconTint="@color/black"
        app:itemTextColor="@color/black"
        app:menu="@menu/menu_bottom_navigation"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
